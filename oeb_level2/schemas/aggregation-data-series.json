{
	"$id": "https://github.com/inab/OEB_level2_data_migration/aggregation-data-series",
	"$schema": "https://json-schema.org/draft/2019-09/schema",
	"title": "Schema that defines an aggregation of metrics focused on box-plots in an aggregation dataset",
	"type": "object",
        "properties": {
		"series_type": {
			"type": "string",
			"const": "aggregation-data-series"
		},
		"challenge_participants": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"label": {
						"title": "Label of the participant tool",
						"type": "string",
						"minLength": 1
					},
					"metric_id": {
						"title": "Label of the metric represented by this data series",
						"type": "string",
						"minLength": 1
					},
					"values": {
						"type": "array",
						"minItems": 1,
						"oneOf": [
							{
								"items": {
									"type": "object",
									"properties": {
										"v": {
											"type": "number"
										},
										"e": {
											"type": "number"
										}
									},
									"unevaluatedProperties": false,
									"required": [
										"v"
									]
								}
							},
							{
								"items": {
									"type": "number"
								}
							}
						]
					},
					"hide": {
						"title": "Should value be initially hidden?",
						"type": "boolean",
						"default": false
					}
				},
				"join_keys": [
					{
						"members": [
							"metric_id"
						],
						"schema_id": "https://github.com/inab/OEB_level2_data_migration/aggregation-data-series",
						"refers_to": "available_metrics_index"
					}
				],
				"required": [
					"label",
					"metric_id",
					"values"
				],
				"unevaluatedProperties": false
			},
			"minItems": 1
		},
                "visualization": {
                        "title": "the visualization hints",
                        "type": "object",
                        "properties": {
				"available_metrics":  {
					"title": "Axis metrics labels",
					"type": "array",
					"items": {
						"type": "string",
						"minLength": 1
					},
					"uniqueItems": true,
					"minItems": 1
				}
			},
			"oneOf": [
				{
					"properties": {
						"representations": {
							"title": "Different representations of the data series",
							"description": "These representations are focused on how the metrics, with their related data series, are conjoined. Two representations belonging to the very same group will share the same canvas. So, different groups mean different canvases.",
							"type": "array",
							"items": {
								"type": "object",
								"properties": {
									"type": {
										"title": "Type of representation for this set of metrics",
										"type": "string",
										"enum": [
											"2D-plot",
											"box-plot",
											"bar-plot",
											"line-plot",
											"radar-plot"
										]
									},
									"axes_clues": {
										"title": "Clues for used axes",
										"description": "Representation clues for used axes. This is needed to adjust some parameters, like axis labels",
										"type": "array",
										"items": {
											"type": "object",
											"properties": {
												"axis": {
													"title": "Axis to be annotated",
													"type": "string",
													"enum": [
														"x",
														"y",
														"x2",
														"y2"
													]
												},
												"title": {
													"type": "string",
													"title": "Text to be shown for the axis",
													"minLength": 1
												},
												"scale": {
													"title": "Axis scale, either linear or log2 (it affects all the axes)",
													"type": "string",
													"enum": [
														"linear",
														"log2"
													],
													"default": "linear"
												}
											},
											"unevaluatedProperties": false,
											"required": [
												"axis"
											]
										},
										"minItems": 1
									},
									"metrics_series": {
										"title": "Series of involved metrics",
										"description": "Depending on the type of representation, the number of involved metrics could be 1, 2 or many",
										"type": "array",
										"items": {
											"type": "object",
											"properties": {
												"metric_id": {
													"title": "Label of the metric",
													"type": "string",
													"minLength": 1
												},
												"optimization": {
													"title": "Chart representation optimization",
													"type": "string",
													"enum": [
														"minimize",
														"maximize"
													],
													"default": "maximize"
												},
												"axis": {
													"title": "Axis for this metrics series",
													"type": "string",
													"enum": [
														"x",
														"y",
														"x2",
														"y2"
													]
												},
												"title": {
													"type": "string",
													"title": "Title to be shown about the metric in a possible axis or legend",
													"minLength": 1
												}
											},
											"unevaluatedProperties": false,
											"required": [
												"metric_id"
											],
											"join_keys": [
												{
													"members": [
														"metric_id"
													],
													"schema_id": "https://github.com/inab/OEB_level2_data_migration/aggregation-data-series",
													"refers_to": "available_metrics_index"
												},
												{
													"members": [
														"axis"
													],
													"schema_id": "https://github.com/inab/OEB_level2_data_migration/aggregation-data-series",
													"refers_to": "axes_index"
												}
											]
										},
										"minItems": 1
									},
									"type_group_id": {
										"title": "For complex representations (i.e. 2D-plot and future line-plot), the group id which helps clustering the metrics by participant. Order does matter.",
										"type": "string",
										"minLength": 1
									}
								},
								"unevaluatedProperties": false,
								"required": [
									"type",
									"metrics_series"
								],
								"index": {
									"name": "axes_index",
									"limit_scope": true,
									"members": [
										"axes_clues.axis"
									]
								}
							},
							"uniqueItems": true,
							"minItems": 1
						}
					},
					"required": [
						"representations",
						"available_metrics"
					]
				},
				{
					"properties": {
						"type": {
							"type": "string",
							"enum": [
								"2D-plot",
								"box-plot",
								"bar-plot"
							]
						},
						"optimization": {
							"title": "Chart representation optimization (valid for bar-plot and 2D-plot)",
							"type": "string",
							"enum": [
								"left",
								"right",
								"minimize",
								"maximize",
								"top-left",
								"top-right",
								"bottom-left",
								"bottom-right"
							]
						},
						"axes_scale": {
							"title": "Axes scale, either linear or log2 (it affects all the axes)",
							"type": "string",
							"enum": [
								"linear",
								"log2"
							],
							"default": "linear"
						}
					},
					"required": [
						"type",
						"available_metrics"
					]
				}
                        ],
                        "unevaluatedProperties": false
                },
		"labels": {
			"title": "Mapping labels to dataset assessment original ids. It can be an incomplete list.",
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"label": {
						"title": "Label representing the participant",
						"type": "string",
						"minLength": 1
					},
					"dataset_orig_id": {
						"title": "Participant dataset original id",
						"type": "string",
						"minLength": 1
					}
				},
				"required": [
					"label",
					"dataset_orig_id"
				],
				"unevaluatedProperties": false
			},
			"minItems": 1
		}
        },
        "required": [
		"series_type",
                "challenge_participants",
                "visualization"
        ],
	"index": {
		"name": "available_metrics_index",
		"limit_scope": true,
		"members": [
			"visualization.available_metrics"
		]
	},
        "unevaluatedProperties": false
}
